html
  include ./head
  body
    block content
    div.main.container.row.col-md-6.col-md-offset-3
            div.col-md-4.center
                h1.display-4.m-b-2 Sign Up
                // register form
                p #{message}
                form.box(method='POST' action='/login/register')
                    div.form-group
                        label(for='name') Name:
                        input#email.form-control(type='text', placeholder='Name' name='name' value=name) 
                    div.form-group
                        label(for='userName') Username:
                        input#name.form-control(type='text', placeholder='Username' name='username')
                    div.form-group
                        label(for='pw') Password:
                        input#pw.form-control(type='password' name='password')
                    div.form-group
                        label(for='pw2') Confirm Password:
                        input#pw2.form-control(type='password' name='confirmPassword')
                    button.btn.btn-primary(type='submit') Sign Up